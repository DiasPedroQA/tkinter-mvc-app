# .editorconfig

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.json]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.md]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.yml, *.yaml]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.toml]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.sh]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.html]
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true
